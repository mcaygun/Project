<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <title>Admin Paneli</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
          rel="stylesheet" />
    <!-- Font Awesome -->
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />

    <style>
        body {
            background-color: #f8f9fa;
        }
        /* Üst navbar ve menünün dış görünümü arasındaki boşluklar */
        .navbar {
            margin-bottom: 0; /* Varsayılan alt boşluğu sıfırlıyoruz */
        }
    </style>
</head>
<body>
    <!-- ÜST NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm">
        <div class="container-fluid">
           
            <button class="navbar-toggler"
                    type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#navbarNav"
                    aria-controls="navbarNav"
                    aria-expanded="false"
                    aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="#">Profil</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Çıkış Yap</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <!-- /ÜST NAVBAR -->
    <!-- ANA KAPSAYICI -->
    <div class="container mt-4">
        <div class="row">
            <!-- SOL MENÜ (list-group) -->
            <div class="col-md-3">
                <div class="card mb-3">
                    <div class="card-body text-center">
                        <h5 class="card-title mb-0">Admin Panel</h5>
                    </div>
                </div>
                <div class="list-group mb-3">
                    <span class="list-group-item list-group-item-action active">
                        <i class="fas fa-tachometer-alt me-2"></i> Dashboard
                    </span>
                    <a href="#" class="list-group-item list-group-item-action">
                        <i class="fas fa-users me-2"></i> Kullanıcılar
                    </a>
                    <a href="#" class="list-group-item list-group-item-action">
                        <i class="fas fa-box me-2"></i> Ürünler
                    </a>
                    <a href="#" class="list-group-item list-group-item-action">
                        <i class="fas fa-chart-bar me-2"></i> Raporlar
                    </a>
                    <a href="#" class="list-group-item list-group-item-action">
                        <i class="fas fa-cog me-2"></i> Ayarlar
                    </a>
                </div>
            </div>
            <!-- /SOL MENÜ -->
            <!-- SAĞ İÇERİK ALANI -->
            <div class="col-md-9">
                <!-- 4 Kartlık Satır -->
                <div class="row">
                    <!-- Kullanıcılar -->
                    <div class="col-lg-3 col-md-6 mb-3">
                        <div class="card shadow-sm border-0">
                            <div class="card-body text-center">
                                <i class="fas fa-users fa-3x text-primary"></i>
                                <h5 class="mt-3">Kullanıcılar</h5>
                                <p>Toplam: 120</p>
                            </div>
                        </div>
                    </div>
                    <!-- Ürünler -->
                    <div class="col-lg-3 col-md-6 mb-3">
                        <div class="card shadow-sm border-0">
                            <div class="card-body text-center">
                                <i class="fas fa-box fa-3x text-success"></i>
                                <h5 class="mt-3">Ürünler</h5>
                                <p>Toplam: 85</p>
                            </div>
                        </div>
                    </div>
                    <!-- Satışlar -->
                    <div class="col-lg-3 col-md-6 mb-3">
                        <div class="card shadow-sm border-0">
                            <div class="card-body text-center">
                                <i class="fas fa-chart-bar fa-3x text-warning"></i>
                                <h5 class="mt-3">Satışlar</h5>
                                <p>Toplam:</p>
                            </div>
                        </div>
                    </div>
                    <!-- Ayarlar -->
                    <div class="col-lg-3 col-md-6 mb-3">
                        <div class="card shadow-sm border-0">
                            <div class="card-body text-center">
                                <i class="fas fa-cog fa-3x text-danger"></i>
                                <h5 class="mt-3">Ayarlar</h5>
                                <p>Güncellenmesi gerekiyor</p>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /4 Kartlık Satır -->
                <!-- Grafikler -->
                <div class="row">
                    <!-- Soldaki Bar Chart -->
                    <div class="col-lg-6 mb-4">
                        <div class="card shadow-sm border-0">
                            <div class="card-body">
                                <h5 class="card-title">Worldwide Sales</h5>
                                <canvas id="worldwideSalesChart"></canvas>
                            </div>
                        </div>
                    </div>
                    <!-- Sağdaki Line Chart -->
                    <div class="col-lg-6 mb-4">
                        <div class="card shadow-sm border-0">
                            <div class="card-body">
                                <h5 class="card-title">Sales &amp; Revenue</h5>
                                <canvas id="salesRevenueChart"></canvas>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /Grafikler -->
                <!-- Recent Sales Tablosu -->
                <div class="row mt-4">
                    <div class="col-12">
                        <div class="card shadow-sm border-0">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <h5 class="card-title m-0">Recent Sales</h5>
                                    <a href="#">Show All</a>
                                </div>
                                <table class="table align-middle table-bordered">
                                    <thead>
                                        <tr>
                                            <th><input type="checkbox" /></th>
                                            <th>Tarih</th>
                                            <th>Fatura</th>
                                            <th>Müşteri</th>
                                            <th>Miktar</th>
                                            <th>Durum</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <!-- Örnek satırlar (aynı tarih ve verilerle) -->
                                        <tr>
                                            <td><input type="checkbox" /></td>
                                            <td>01 Jan 2045</td>
                                            <td>INV-0123</td>
                                            <td>Ahmet Mümtaz</td>
                                            <td>$120</td>
                                            <td>Ödendi</td>
                                            <td><button class="btn btn-primary btn-sm">Detaylar</button></td>
                                        </tr>
                                        <tr>
                                            <td><input type="checkbox" /></td>
                                            <td>01 Jan 2045</td>
                                            <td>INV-0123</td>
                                            <td>Hakan Ünal</td>
                                            <td>$123</td>
                                            <td>Ödendi</td>
                                            <td><button class="btn btn-primary btn-sm">Detaylar</button></td>
                                        </tr>
                                        <tr>
                                            <td><input type="checkbox" /></td>
                                            <td>01 Jan 2045</td>
                                            <td>INV-0123</td>
                                            <td>Meltem Ezgi</td>
                                            <td>$250</td>
                                            <td>Ödendi</td>
                                            <td><button class="btn btn-primary btn-sm">Detaylar</button></td>
                                        </tr>
                                        <!-- İstediğiniz kadar satır ekleyebilirsiniz -->
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /Recent Sales Tablosu -->
            </div>
            <!-- /SAĞ İÇERİK ALANI -->
        </div>
    </div>
    <!-- /ANA KAPSAYICI -->
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Chart.js CDN -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>
        // 1) Worldwide Sales Bar Chart
        const ctx1 = document.getElementById('worldwideSalesChart').getContext('2d');
        new Chart(ctx1, {
            type: 'bar',
            data: {
                labels: ['2016', '2017', '2018', '2019', '2020', '2021', '2022'],
                datasets: [
                    {
                        label: 'Giyim',
                        data: [10, 20, 40, 55, 50, 70, 90],
                        backgroundColor: 'rgba(54, 162, 235, 0.7)'
                    },
                    {
                        label: 'Ayakkabı',
                        data: [8, 15, 35, 45, 48, 60, 80],
                        backgroundColor: 'rgba(255, 206, 86, 0.7)'
                    },
                    {
                        label: 'Kozmetik',
                        data: [6, 12, 30, 40, 45, 70, 85],
                        backgroundColor: 'rgba(75, 192, 192, 0.7)'
                    },
                    {
                        label: 'BeyazEsya',
                        data: [5, 18, 38, 50, 55, 60, 95],
                        backgroundColor: 'rgba(153, 102, 255, 0.7)'
                    }
                ]
            },
            options: {
                responsive: true,
                scales: {
                    y: {
                        beginAtZero: true,
                        max: 100
                    }
                }
            }
        });

        // 2) Sales & Revenue Line Chart
        const ctx2 = document.getElementById('salesRevenueChart').getContext('2d');
        new Chart(ctx2, {
            type: 'line',
            data: {
                labels: ['2016', '2017', '2018', '2019', '2020', '2021', '2022'],
                datasets: [
                    {
                        label: 'Satış',
                        data: [20, 100, 150, 80, 60, 70, 100],
                        fill: true,
                        borderColor: 'rgba(54, 162, 235, 1)',
                        backgroundColor: 'rgba(54, 162, 235, 0.2)',
                        tension: 0.1
                    },
                    {
                        label: 'Ciro',
                        data: [30, 120, 200, 150, 220, 180, 300],
                        fill: true,
                        borderColor: 'rgba(75, 192, 192, 1)',
                        backgroundColor: 'rgba(75, 192, 192, 0.2)',
                        tension: 0.1
                    }
                ]
            },
            options: {
                responsive: true,
                scales: {
                    y: {
                        beginAtZero: true,
                        max: 300
                    }
                }
            }
        });
    </script>
</body>
</html>
