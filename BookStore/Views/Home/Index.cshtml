@using BookStore.Data.Entities
@{
    ViewData["Title"] = "Home Page";
}

@model IEnumerable<Product>

<!-- Banner / Ürün Listesi Kısmı -->
<div class="intro-section pt-lg-0">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12 col-lg-12">
                <div class="banner banner-big banner-overlay">
                    <a href="#">
                        <img src="~/assets/images/demos/demo-20/banners/kapakfoto.webp"
                             alt="Banner"
                             style="max-width: 100%; height: 500px; object-fit: cover; margin-top: -10;">
                    </a>
                    <div class="banner-content" style="padding-top:-10;">
                        <h2 class="banner-title text-white">
                            <a>Ürünlere Gitmek İçin Tıklayınız</a>
                        </h2>
                        <a asp-controller="Product" asp-action="Index"
                           class="btn btn-outline-white-3 banner-link">
                            <i class="icon-long-arrow-right"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- En Son Eklenenler -->
<div class="bestseller-products bg-light pt-5 pb-5 mb-5">
    <div class="container">
        <div class="heading heading-flex">
            <div class="heading-left">
                <h2 class="title">En Son Eklenenler</h2>
            </div>
            <div class="heading-right">
                <a asp-controller="Product" asp-action="Index" class="title-link">
                    Daha Fazla Ürün İçin <i class="icon-long-arrow-right"></i>
                </a>
            </div>
        </div>

        <div class="row">
            @foreach (var product in Model.Take(100))
            {
                <div class="col-md-3">
                    <div class="product">
                        <figure class="product-media">
                            <a href="@Url.Action("ProductDetail", "Product", new { id = product.Id })">
                                <img src="@product.ImagePath"
                                     alt="Product image"
                                     class="product-image"
                                     style="max-width: 100%; height: 100%;">
                            </a>
                        </figure>

                        <div class="product-body">
                            <h3 class="product-title">
                                <a href="@Url.Action("ProductDetail", "Product", new { id = product.Id })">
                                    @product.Name
                                </a>
                            </h3>
                            <div class="product-price">
                                @product.Price ₺
                            </div>

                            <div class="product-footer">
                                <div class="product-action">
                                    <a href="#" class="btn-product btn-cart">
                                        <span>Sepete Ekle</span>
                                    </a>
                                    @*<a href="#" class="btn-product btn-wishlist">
                                <span>Favorilere Ekle</span>
                                </a>*@
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div> <!-- row -->
    </div> <!-- container -->
</div> <!-- bestseller-products -->
<!-- ========================= -->
