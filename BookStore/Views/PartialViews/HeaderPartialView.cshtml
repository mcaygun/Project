    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Sepet ve favori sayısını saklayacak değişkenler (ilk değer 0)
            let cartCount = 0;
            let favoriteCount = 0;

            // Header'daki span elementlerini seçiyoruz
            const cartCountEl = document.getElementById("cart-count");
            const favoriteCountEl = document.getElementById("favorite-count");

            // Sepete Ekle butonlarını seç
            const addToCartButtons = document.querySelectorAll(".add-to-cart");
            addToCartButtons.forEach(function (btn) {
                btn.addEventListener("click", function (e) {
                    e.preventDefault(); // Link veya submit davranışını engelle
                    cartCount++;
                    cartCountEl.textContent = cartCount;
                });
            });

            // Favorilere Ekle butonlarını seç (varsa)
            const addToFavButtons = document.querySelectorAll(".add-to-favorites");
            addToFavButtons.forEach(function (btn) {
                btn.addEventListener("click", function (e) {
                    e.preventDefault();
                    favoriteCount++;
                    favoriteCountEl.textContent = favoriteCount;
                });
            });
        });
    </script>



