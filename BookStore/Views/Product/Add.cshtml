@using BookStore.Data.ViewModels.Products

@{
    ViewData["Title"] = "Add";
}

<h1 class="form-header">Ürün Ekleme</h1>

<div asp-validation-summary="ModelOnly"></div>

@model ProductAddViewModel

<form asp-controller="Product" asp-action="Add" method="post" enctype="multipart/form-data" class="product-add-form">
    <!-- Ürün İsmi ve Ürün Fiyat yan yana -->
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Name" class="form-label">Ürün İsmi:</label>
            <input class="form-control" asp-for="Name" />
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Price" class="form-label">Ürün Fiyat:</label>
            <input class="form-control" asp-for="Price" />
            <span class="text-danger" asp-validation-for="Price"></span>
        </div>
    </div>

    <!-- Ürün Stok ve Ürün Açıklama yan yana -->
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Stock" class="form-label">Ürün Stok:</label>
            <input type="number" class="form-control" asp-for="Stock" />
            <span class="text-danger" asp-validation-for="Stock"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Description" class="form-label">Ürün Açıklama</label>
            <textarea asp-for="Description" class="form-control form-control-sm" placeholder="Ürün Açıklama" style="height: 100px;"></textarea>
            <span class="text-danger" asp-validation-for="Description"></span>
        </div>
    </div>

    <!-- Ürün Tarihi ve Resim Yükle yan yana -->
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="PublishDate" class="form-label">Ürün Yayınlanma Tarihi:</label>
            <input type="date" class="form-control" asp-for="PublishDate" />
            <span class="text-danger" asp-validation-for="PublishDate"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Image" class="form-label">Resim Yükle:</label>
            <input type="file" class="form-control" id="image" name="image" accept="image/*" />
        </div>
    </div>

    <!-- Kategori ID ve Yazar ID yan yana -->

    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="CategoryId" class="form-label">Kategori:</label>
            <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories"></select>
            <span class="text-danger" asp-validation-for="CategoryId"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="AuthorId" class="form-label">Yazar:</label>
            <select asp-for="AuthorId" class="form-control" asp-items="ViewBag.Authors"></select>
            <span class="text-danger" asp-validation-for="AuthorId"></span>
        </div>
    </div>

    <!-- Ürün Kaydet butonu -->
    <div class="form-group text-center">
        <button class="btn btn-primary btn-lg" type="submit">Ürün Kaydet</button>
    </div>
</form>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

<style>
    body {
        font-family: 'Roboto', sans-serif;
    }

    .form-header {
        font-size: 2.5rem;
        color: #1cc0a0;
        text-align: center;
        margin-bottom: 30px;
    }

    .product-add-form {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
        background-color: #f9f9f9;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .form-row {
        display: flex;
        justify-content: space-between;
        margin-bottom: 20px;
    }

    .form-group {
        flex-basis: 48%;
    }

        .form-group label {
            font-weight: bold;
            margin-bottom: 5px;
        }

        .form-group input, .form-group textarea {
            padding: 10px;
            border-radius: 4px;
            border: 1px solid #ccc;
            width: 100%;
            box-sizing: border-box;
        }

            .form-group input:focus, .form-group textarea:focus {
                border-color: #1cc0a0;
                outline: none;
            }

    .btn {
        background-color: #1cc0a0;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
    }

        .btn:hover {
            background-color: #13937b;
        }

</style>
